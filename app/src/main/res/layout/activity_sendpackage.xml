<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sendpackage">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="390dp"
                android:layout_height="927dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="61dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/imageButton12"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="5dp"
                        android:background="@null"
                        android:contentDescription="Square button for selecting an option."
                        app:srcCompat="@drawable/square" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="40pt"
                        android:text="Send a package"
                        android:textColor="#A6A6A6" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView27"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Origin Details" />

                    <EditText
                        android:id="@+id/editTextText1"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:background="@android:drawable/editbox_background"
                        android:ems="10"
                        android:inputType="text"
                        android:text="Address"
                        android:textColor="#A6A6A6" />

                    <EditText
                        android:id="@+id/editTextText2"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:background="@android:drawable/editbox_background"
                        android:ems="10"
                        android:inputType="text"
                        android:text="State,Country"
                        android:textColor="#A6A6A6" />

                    <EditText
                        android:id="@+id/editTextText8"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:background="@android:drawable/editbox_background"
                        android:ems="10"
                        android:inputType="text"
                        android:text="Phone number"
                        android:textColor="#A6A6A6" />

                    <EditText
                        android:id="@+id/editTextText4"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:background="@android:drawable/editbox_background"
                        android:ems="10"
                        android:inputType="text"
                        android:text="Others"
                        android:textColor="#A6A6A6" />

                    <TextView
                        android:id="@+id/textView28"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Destination Details" />

                    <EditText
                        android:id="@+id/editTextText6"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:background="@android:drawable/editbox_background"
                        android:ems="10"
                        android:inputType="text"
                        android:text="Address"
                        android:textColor="#A6A6A6" />

                    <EditText
                        android:id="@+id/editTextText7"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:background="@android:drawable/editbox_background"
                        android:ems="10"
                        android:inputType="text"
                        android:text="State,Country"
                        android:textColor="#A6A6A6" />

                    <EditText
                        android:id="@+id/editTextText10"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:background="@android:drawable/editbox_background"
                        android:ems="10"
                        android:inputType="text"
                        android:text="Phone number"
                        android:textColor="#A6A6A6" />

                    <EditText
                        android:id="@+id/editTextText3"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:background="@android:drawable/editbox_background"
                        android:ems="10"
                        android:inputType="text"
                        android:text="Others"
                        android:textColor="#A6A6A6" />

                    <TextView
                        android:id="@+id/textView29"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Package Details" />

                    <EditText
                        android:id="@+id/editTextText17"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:background="@android:drawable/editbox_background"
                        android:ems="10"
                        android:inputType="text"
                        android:text="package items"
                        android:textColor="#A6A6A6" />

                    <EditText
                        android:id="@+id/editTextText18"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:background="@android:drawable/editbox_background"
                        android:ems="10"
                        android:inputType="text"
                        android:text="Weight of item(kg)"
                        android:textColor="#A6A6A6" />

                    <EditText
                        android:id="@+id/editTextText19"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:background="@android:drawable/editbox_background"
                        android:ems="10"
                        android:inputType="text"
                        android:text="Worth of Items"
                        android:textColor="#A6A6A6" />

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/editbox_background"
                        android:text="Select delivery type" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="99dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/imageButton13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:contentDescription="instantdeliver"
                        app:srcCompat="@drawable/instantdeliver" />

                    <ImageButton
                        android:id="@+id/imageButton14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:contentDescription="scheduleddeliver"
                        app:srcCompat="@drawable/scheduleddeliver" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/button4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#0560FA"
                        android:text="Next" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>