<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Transaction1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="287dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ViewFlipper
                        android:id="@+id/viewFlipper"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/component"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/component" />

                        <ImageView
                            android:id="@+id/component2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/component1" />

                        <ImageView
                            android:id="@+id/component3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/component2" />

                        <ImageView
                            android:id="@+id/component4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/component3" />

                    </ViewFlipper>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="246dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView52"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Your rider is on the way to your destination" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView53"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tracking Number" />

                        <TextView
                            android:id="@+id/textView54"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="R-7458-4567-4434-5854"
                            android:textColor="#0560FA" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/button"
                        android:layout_width="346dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="30dp"
                        android:backgroundTint="#0000FF"
                        android:text="Track my item"
                        android:textColor="#FFFFFF"
                        app:cornerRadius="4.96dp" />

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="345dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="30dp"
                        android:background="@null"
                        android:backgroundTint="#FCFCFF"
                        android:text="Go back to homepage"
                        android:textColor="#3F51B5"
                        app:cornerRadius="4.96dp"
                        app:strokeColor="#3F51B5" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>